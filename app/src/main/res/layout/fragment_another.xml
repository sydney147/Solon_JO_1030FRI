<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"> <!-- Use weight to fill the space -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- First Group with Border Background -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custombackground"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/fragment_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Acheron Image"
                    android:src="@drawable/img_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acheron"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="@font/alcubierre" /> <!-- Custom Font -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acheron embodies the concept of emptiness and leads forces that erode existence and meaning."
                    android:textSize="16sp"
                    android:gravity="center"
                    android:fontFamily="@font/alcubierre" /> <!-- Custom Font -->

            </LinearLayout>

            <!-- Second Group with Border Background -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custombackground"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/fragment_image2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Nihility Image"
                    android:src="@drawable/img_6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Nihility"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="@font/alcubierre" /> <!-- Custom Font -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Nihility represents decay and entropy, symbolizing the inevitable destruction and void in the universe."
                    android:textSize="16sp"
                    android:gravity="center"
                    android:fontFamily="@font/alcubierre" /> <!-- Custom Font -->

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
